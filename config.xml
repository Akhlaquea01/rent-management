<?xml version='1.0' encoding='utf-8'?>
<widget id="com.rentmanagement.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Rent Management</name>
    <description>Smart rent collection and tenant management system</description>
    <author email="akhlaquea01@gmail.com" href="https://rent-management-pi.vercel.app/">
        Rent Management Team
    </author>
    <content src="index.html" />
    
    <!-- Android specific configurations -->
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    
    <!-- Global preferences -->
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="22" />
    <preference name="android-targetSdkVersion" value="33" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="Orientation" value="portrait" />
    
    <!-- Allow external URLs -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <!-- Access origin -->
    <access origin="*" />
    
    <!-- Content Security Policy -->
    <allow-navigation href="*" />
</widget>
